{% extends 'client/index.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-md-6 text-center">

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <form method="post" class="p-4 shadow rounded" novalidate>
                <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

                  {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
                    <div>
                        <small>
                            Enter your email address, and we will send you a
                            link to reset your password.
                        </small>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Send password reset email</button>
                {{ form_end(requestForm) }}
                
                <p class="mt-3">Remember your password? <a href="{{ path('app_login') }}">Sign in</a></p>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="..."></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="..."></script>
{% endblock %}
