{% extends 'base.html.twig' %}

{% block title %}Success{% endblock %}

{% block stylesheets %}
    {# Include Bootstrap CSS here #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    {# Additional custom styles #}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 36px;
            color: #007bff;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .btn-primary {
            display: inline-block;
            padding: 10px 20px;
            margin: 0 10px;
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Success!</h1>
        <p>{{ message }}</p>

        <div class="button-container">
            <a href="{{ path('app_constat_show', {'id': sinister_vehicle.id}) }}" class="btn btn-primary">Show</a>
            <a href="{{ path('app_constat_edit', {'id': sinister_vehicle.id}) }}" class="btn btn-primary">Edit</a>
            {# Add the delete button or any other actions as needed #}
        </div>
    </div>
{% endblock %}
