<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Devis Assurance</title>
    <style>
        .header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .title {
            text-align: center;
            margin-bottom: 20px;
        }
        .details {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div>
        <div class="header">
            <div class="assurance-name">
                Assurance XYZ
            </div>
            <div class="date">
                Date: {{date}}
            </div>
        </div>
        <div class="title">
            <h1>Devis Numéro: 123456</h1>
        </div>
        <p><strong>Client :  {{quote.user.name}}</strong></p>

        <h2>Assurance Type : {{quote.type}}</h2>
        <br>
        <br>
        <div class="details">
            <h2>Détails du devis :</h2>
            {% for service in quote.services %}
            <p>{{service}}</p>
            {% endfor %}

        </div>
    </div>
</body>
</html>