{% extends 'admin/index.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                <div class="col-md-6">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'name'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <br>
                <div class="col-md-6">
                    {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'price'}}) }}
                    {{ form_errors(form.price) }}
                </div>
                <br>
                <div class="col-md-6">
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'placeholder': 'marque'}}) }}
                    {{ form_errors(form.marque) }}
                </div>
                <br>
                <div class="col-md-6">
                    {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'placeholder': 'modele'}}) }}
                    {{ form_errors(form.modele) }}
                </div>
                <br>
                <div class="col-md-6">
                    {{ form_widget(form.year, {'attr': {'class': 'form-control', 'placeholder': 'year'}}) }}
                    {{ form_errors(form.year) }}
                </div>
                <br>
                <div class="col-md-12">
                    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                    <a href="{{ path('app_question_index') }}" class="btn btn-danger">Back to List</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
